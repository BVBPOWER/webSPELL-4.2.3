{
    "src_folders" : ["./tests/nightwatchjs"],
    "output_folder" : "./tests/reports",
    "custom_commands_path" : "",
    "custom_assertions_path" : "",
    "globals_path" : "",
    "live_output" : false,
    "parallel_process_delay" : 10,
    "disable_colors": false,

    "selenium" : {
        "start_process" : true,
        "server_path" : "./tools/selenium-server-standalone-2.44.0.jar",
        "log_path" : "",
        "host" : "127.0.0.1",
        "port" : 4444,
        "cli_args" : {
            "webdriver.chrome.driver" : "./tools/chromedriver_linux64",
            "webdriver.ie.driver" : "",
            "webdriver.firefox.profile" : ""
        }
    },

    "test_settings" : {
        "default" : {
            "launch_url" : "http://localhost",
            "selenium_host" : "127.0.0.1",
            "selenium_port" : 4444,
            "silent" : true,
            "disable_colors": false,
            "screenshots" : {
                "enabled" : false,
                "path" : "./tests/reports"
            },
            "desiredCapabilities" : {
                "browserName" : "firefox",
                "javascriptEnabled" : true,
                "acceptSslCerts" : true
            }
        },

        "saucelabs" : {
            "selenium_host" : "ondemand.saucelabs.com",
            "selenium_port" : 80,
            "username" : "${SAUCE_USERNAME}",
            "access_key" : "${SAUCE_ACCESS_KEY}",
            "use_ssl" : false,
            "silent" : true,
            "output" : true,
            "screenshots" : {
                "enabled" : false,
                "path" : ""
            },
            "desiredCapabilities": {
                "name" : "webspell",
                "browserName": "firefox"
            },
            "selenium" : {
                "start_process" : false
            }
        },

        "phantomjs" : {
            "desiredCapabilities" : {
                "browserName" : "phantomjs",
                "javascriptEnabled" : true,
                "acceptSslCerts" : true,
                "phantomjs.binary.path" : "./node_modules/.bin/phantomjs"
            }
        },

        "browserstack" : {
            "selenium" : {
                "start_process" : false
            },
            "selenium_host" : "hub.browserstack.com",
            "selenium_port" : 80,
            "silent" : true,
            "desiredCapabilities": {
                "name" : "webspell",
                "browserName": "firefox",
                "browserstack.user" : "${BROWSERSTACK_USERNAME}",
                "browserstack.key" : "${BROWSERSTACK_KEY}"
            }
        },

        "firefox" : {
            "desiredCapabilities": {
                "browserName": "firefox",
                "javascriptEnabled": true,
                "acceptSslCerts": true
            }
        },

        "chrome" : {
            "desiredCapabilities": {
                "browserName": "chrome",
                "javascriptEnabled": true,
                "acceptSslCerts": true
            }
        }
    }
}
